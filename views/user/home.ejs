<script>
document.addEventListener("DOMContentLoaded", function () {
    // Get the current page file name (without query parameters)
    let currentPage = window.location.pathname.split("/").pop();

    // If the URL ends with "/", assume it's "Navbar.html"
    if (currentPage === "" || currentPage === "index.html") {
        currentPage = "Navbar.html"; // Change this if your homepage file is different
    }

    // Select all navbar links
    let navLinks = document.querySelectorAll(".nav-link");

    // Remove 'active' class from all links
    navLinks.forEach(link => link.classList.remove("active"));

    // Loop through links and add "active" class only to the matching one
    navLinks.forEach(link => {
        if (link.getAttribute("href") === currentPage) {
            link.classList.add("active");
        }
    });
});
</script>


