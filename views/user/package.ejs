                    <tr>
                        <th>Plan Name</th>
                        <th>Plan Features</th>
                        <th>Plan Amount</th>
                    </tr>
                </thead>
                <tbody>
                    <% key_highlight.forEach(plan => { %>
                        <tr>
                            <td><%= plan.plan_name %></td>
                            <td><%= plan.key_features %></td>
                            <td><%= plan.key_amount %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</section>



