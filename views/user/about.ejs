.hero-section {
    position: relative;
    width: 100%;
    height: 400px; /* Adjust height as needed */
    overflow: hidden;
    animation: fadeIn 1.5s ease-in-out;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(-20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Hero Image Styling */
.hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

/* Pink Overlay */
.hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 192, 203, 0.2); /* Darker semi-transparent pink */
    display: flex;
    justify-content: center;
    align-items: center;
}

/* "About Us" Text Styling */
.hero-overlay h1 {
    color: white;
    font-size: 48px;
    font-weight: bold;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.6);
    text-transform: uppercase;
}

/* Responsive Design */
@media (max-width: 768px) {
    .hero-section {
        height: 300px; /* Reduce height for mobile */
    }

    .hero-overlay h1 {
        font-size: 36px; /* Adjust text size */
    }
}

@media (max-width: 480px) {
    .hero-section {
        height: 250px; /* Further reduce height */
    }

    .hero-overlay h1 {
        font-size: 28px; /* Smaller text for small screens */
    }
}
