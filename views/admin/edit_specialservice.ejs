<%- include('navbar.ejs') %>

<div class="container mt-5">
    <h2 class="text-center">Edit Special Service</h2>

    <div class="card p-4">
        <form action="/admin/update_specialservice/<%= specialService.special_id %>" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label>Special Service Title</label>
                <input type="text" name="special_title" class="form-control" value="<%= specialService.special_title %>" required>
            </div>
            <div class="mb-3">
                <label>Description</label>
                <textarea name="special_description" class="form-control" required><%= specialService.special_description %></textarea>
            </div>
            <div class="mb-3">
                <label>Current Image</label><br>
                <img src="/admin_assets/<%= specialService.special_image %>" width="100">
            </div>
            <div class="mb-3">
                <label>Upload New Image (Optional)</label>
                <input type="file" name="special_image" class="form-control">
                <input type="hidden" name="old_image" value="<%= specialService.special_image %>">
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>

<%- include('footer.ejs') %>
