<%- include("navbar.ejs") %>

<div class="container mt-5">
    <div class="row">
        <!-- Add Package Form -->
        <div class="col-md-5">
            <div class="card shadow-lg p-4 rounded">
                <h3 class="text-center mb-4">Add New Package</h3>
                <form action="/admin/save_package" method="POST">
                    
                    <div class="mb-3">
                        <label class="form-label">Package Name:</label>
                        <input type="text" name="package_name" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Package Title:</label>
                        <input type="text" name="package_title" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Package Description:</label>
                        <textarea name="package_description" class="form-control" rows="4" required></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Add Package</button>
                </form>
            </div>
        </div>

        <!-- Package List Table -->
        <div class="col-md-7">
            <div class="card shadow-lg p-4 rounded">
                <h3 class="text-center mb-4">Package List</h3>
                <table class="table table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Title</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (packages.length > 0) { %>
                            <% packages.forEach((package, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td><%= package.package_name %></td>
                                    <td><%= package.package_title %></td>
                                    <td>
                                        <a href="/admin/edit_package/<%= package.package_id %>" class="btn btn-warning btn-sm">Edit</a>
                                        <a href="/admin/delete_package/<%= package.package_id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</a>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="4" class="text-center">No packages added yet</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include("footer.ejs") %>
