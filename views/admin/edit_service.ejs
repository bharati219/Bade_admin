<%- include("navbar.ejs") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Service</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Edit Service</h2>

        <div class="card shadow p-4">
            <form action="/admin/update_service/<%= service.service_id %>" method="POST" enctype="multipart/form-data">
                <input type="hidden" name="old_img" value="<%= service.image %>">

                <!-- Service Name -->
                <div class="mb-3">
                    <label for="service_name" class="form-label">Service Name:</label>
                    <input type="text" id="service_name" name="service_name" class="form-control" value="<%= service.service_name %>" required>
                </div>

                <!-- Description -->
                <div class="mb-3">
                    <label for="description" class="form-label">Description:</label>
                    <textarea id="description" name="description" class="form-control" rows="4" required><%= service.description %></textarea>
                </div>

                <!-- Current Image -->
                <div class="mb-3">
                    <label class="form-label">Current Image:</label><br>
                    <% if (service.image) { %>
                        <img src="/admin_assets/<%= service.image %>" alt="Service Image" class="img-thumbnail" width="150"><br>
                    <% } else { %>
                        <p class="text-muted">No Image Uploaded</p>
                    <% } %>
                </div>

                <!-- Upload New Image -->
                <div class="mb-3">
                    <label for="image" class="form-label">Upload New Image:</label>
                    <input type="file" id="image" name="image" class="form-control">
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-success w-100">Update Service</button>
            </form>

            <div class="text-center mt-3">
                <a href="/admin/services" class="btn btn-secondary">Back to Services</a>
            </div>
        </div>
    </div>

    <%- include("footer.ejs") %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
