<%- include("navbar.ejs") %>

<div class="container mt-4">
    <h1 class="text-center">Key Highlights</h1>

    <!-- Form to Add Key Highlights -->
    <div class="card p-4 mb-4">
        <h3>Add Key Highlight</h3>
        <form action="/admin/key_highlight" method="POST">
            
            <!-- Package Selection Dropdown -->
            <div class="mb-3">
                <label for="package_id" class="form-label">Select Package</label>
                <select id="package_id" name="package_id" class="form-control" required>
                    <option value="">-- Select a Package --</option>
                    <% packages.forEach(package => { %>
                        <option value="<%= package.package_id %>"><%= package.package_name %></option>
                    <% }) %>
                </select>
            </div>

            <div class="mb-3">
                <label for="plan_name" class="form-label">Plan Name</label>
                <input type="text" id="plan_name" name="plan_name" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="key_features" class="form-label">Features</label>
                <textarea id="key_features" name="key_features" class="form-control" rows="3" required></textarea>
            </div>

            <div class="mb-3">
                <label for="key_amount" class="form-label">Amount ($)</label>
                <input type="number" id="key_amount" name="key_amount" class="form-control" required>
            </div>

            <button type="submit" class="btn btn-primary">Add Highlight</button>
        </form>
    </div>

    <!-- Display List of Key Highlights -->
    <div class="card p-4">
        <h3>Existing Key Highlights</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Package Name</th>
                    <th>Plan Name</th>
                    <th>Features</th>
                    <th>Amount ($)</th>
                </tr>
            </thead>
            <tbody>
                <% if (keyHighlights.length > 0) { %>
                    <% keyHighlights.forEach(highlight => { %>
                        <tr>
                            <td><%= highlight.package_name %></td>
                            <td><%= highlight.plan_name %></td>
                            <td><%= highlight.key_features %></td>
                            <td><%= highlight.key_amount %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="4" class="text-center">No Key Highlights Available</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<%- include("footer.ejs") %>
